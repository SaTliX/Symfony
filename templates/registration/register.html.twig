{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">S'inscrire</h1>
                {{ form_start(registrationForm, {'attr': {'class': 'form-group'}}) }}
                    {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
