{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-action {
            font-size: 16px;
            padding: 10px 20px;
        }

        .form-control {
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .edit-profil-container {
            background-color: #f8f9fa;
            padding: 30px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-primary text-black">Modifier mon mot de passe</h1>

    {% for message in app.flashes('notice') %}
        <div class="alert alert-warning text-center mt-3">{{ message }} <i class="bi bi-hand-thumbs-up"></i></div>
    {% endfor %}

    <div class="edit-profil-container">
        <section id="edit-profil" class="py-5">
            {{ form_start(form, {'attr' : {'class' : 'd-flex flex-column gap-3'}} ) }}
            <div class="form-group">
                {{ form_label(form.plainPassword, 'Nouveau mot de passe :', {'label_attr': {'class': 'text-primary fw-bold'}}) }}
                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'rows': 3}}) }}
            </div>

            <div class="d-flex justify-content-end">
                <button class="btn btn-primary btn-action me-2" type="submit">Enregistrer la modification</button>
                <a href="{{path('app_profil') }}" class="btn btn-secondary btn-action">Annuler</a>
            </div>
            {{ form_end(form)}}
        </section>
    </div>
</div>
{% endblock %}
