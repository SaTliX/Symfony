{% extends 'base.html.twig' %}

{% block title %}Accueil - Formation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-5" style="color: #343a40; margin-bottom: 5rem;">Bienvenue</h1>

        <div class="row">
            {# Cours récemment ajoutés #}
            <div class="col-md-6">
                <h3 class="text-info text-center">Cours récents</h3>
                <div class="row">
                    {% for course in recentCourses %}
                        <div class="col-md-6">
                            <div class="card mb-4" style="background-color: #f8f9fa;">
                                <div class="card-body">
                                    <h5 class="card-title">{{ course.title }}</h5>
                                    <p class="card-text">{{ course.shortDescription|raw }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            {# Cours recommandés #}
            <div class="col-md-6">
                <h3 class="text-info text-center">Cours recommandés</h3>
                <div class="row">
                    {% for course in recommendedCourses %}
                        <div class="col-md-6">
                            <div class="card mb-4" style="background-color: #e9ecef;">
                                <div class="card-body">
                                    <h5 class="card-title">{{ course.title }}</h5>
                                    <p class="card-text">{{ course.shortDescription|raw }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
